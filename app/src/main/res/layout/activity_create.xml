<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateActivity">

    <!-- Game Name Input -->
    <EditText
        android:id="@+id/editTextGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:hint="Enter game name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textSize="16sp" />

    <!-- Pick Images Button -->

    <!-- Selected Images RecyclerView -->

    <!-- Save Game Button -->

    <Button
        android:id="@+id/btnPickImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pick Images from Gallery" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSelectedImages"
        android:layout_width="372dp"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"

        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnSaveGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Save Game" />

</LinearLayout>
